@model List<CreateJob>
@{
    Layout = "_Layout";
}
<br />
    <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Ad" asp-action="Create">Add Ad</a>
<br>
    <table class="table table-striped table-hover">
        <thead>
            <tr class=table-active>
                <th>Job Name</th>
                <th>Job Description</th>
                <th>Address</th>
                <th>Requirements</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                 <tr>
                     <td>@item.JobName</td>
                     <td>@item.JobDescription</td>
                     <td>@item.Address</td>
                     <td>@item.Requirements</td>
                 </tr>
            }
        }

        </tbody>
    </table>